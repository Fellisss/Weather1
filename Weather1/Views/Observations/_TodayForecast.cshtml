@model Weather1.Models.Observation

@if (Model == null)
{
    <div class="p-3">
        <p class="mb-0">Пожалуйста, выберите город и нажмите «Показать прогноз» — здесь появится прогноз на сегодня.</p>
    </div>
}
else
{
    <div class="p-2" style="display: grid; gap: 10px; font-size: 16px;">

        <div style="display: flex; align-items: center; gap: 10px;">
            <span style="font-size: 20px;">🌡️</span>
            <p class="mb-0"><strong>Температура:</strong> @Model.Temperature °C</p>
        </div>

        <div style="display: flex; align-items: center; gap: 10px;">
            <span style="font-size: 20px;">💧</span>
            <p class="mb-0"><strong>Влажность:</strong> @Model.Humidity %</p>
        </div>

        <div style="display: flex; align-items: center; gap: 10px;">
            <span style="font-size: 20px;">☔️</span>
            <p class="mb-0"><strong>Осадки:</strong> @Model.Precipitation</p>
        </div>

        <div style="display: flex; align-items: center; gap: 10px;">
            <span style="font-size: 20px;">🌬️</span>
            <p class="mb-0"><strong>Ветер:</strong> @Model.WindSpeed м/с</p>
        </div>
         <!-- ✅ Фото Земли после показателей -->
        <div style="margin-top: 30px; text-align: center;">
            <img src="~/images/Group 2.jpg"
                 alt="Планета Земля"
                 style="width: 700px; height: auto; border-radius: 10px; opacity: 0.9;" />
        </div>


    </div>
}