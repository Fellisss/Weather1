@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Weather1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Weather1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header style="position: fixed; top: 0; left: 0; width: 100%; z-index: 1000;">
        <nav class="navbar navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <div style="font-size: 24px; font-weight: bold;">
                    Weather1
                </div>

                @* Если мы на странице Archive — показываем кнопку "Назад к сегодняшним" *@
                @if (currentController == "Observations" && currentAction == "Archive")
                {
                    <div>
                        <a class="btn btn-secondary" asp-controller="Observations" asp-action="Index">
                            Назад к сегодняшним
                        </a>
                    </div>
                }
                else if (!(currentController == "Observations" && currentAction == "Create"))
                {
                    <div>
                        <a class="btn btn-primary" asp-controller="Observations" asp-action="Create" style="margin-right: 10px;">
                            Добавить наблюдение
                        </a>
                        <a class="btn btn-secondary" asp-controller="Observations" asp-action="Archive">
                            Архив
                        </a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 100px;">
        @if (TempData["SuccessMessage"] != null)
        {
            <div id="success-alert" class="alert alert-success text-center"
                 style="position: fixed; top: 80px; left: 50%; transform: translateX(-50%);
                        z-index: 2000; width: auto; min-width: 300px; max-width: 600px;">
                @TempData["SuccessMessage"]
            </div>

            <script>
                setTimeout(function () {
                    var alertBox = document.getElementById("success-alert");
                    if (alertBox) {
                        alertBox.style.transition = "opacity 0.5s";
                        alertBox.style.opacity = "0";
                        setTimeout(() => alertBox.remove(), 500);
                    }
                }, 3000);
            </script>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted" style="border-top: 1px solid rgba(255,255,255,0.2);">
        <div class="container text-center py-2">
            © 2025 - Weather1
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>